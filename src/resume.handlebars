<!DOCTYPE html>
{{#if resume.meta.language}}
<html lang="{{resume.meta.language}}">
{{else}}
<html>
{{/if}}

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{#if resume.basics.name}}{{i18n "title" "name" resume.basics.name}}{{else}}{{i18n "curriculum-vitae"}}{{/if}}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    {{{css}}}
    {{#if resume.meta.customStyles}}
    {{{resume.meta.customStyles}}}
    {{/if}}
  </style>
</head>

<body>
  <div id="content" class="container">
    
    {{#resume.basics}}
    {{#if @root.resume.meta.logo}}
      <header class="logo-container">
        <div>
          <img class="logo" src="{{@root.resume.meta.logo}}" alt="Logo">
        </div>
        {{#if @root.resume.meta.labelUnderLogo}}
          {{#if label}}
          <h2 class="label-text">{{label}}</h2>
          {{/if}}
        {{/if}}
      </header>
    {{/if}}
    <header class="header-row">
      <div class="header-left" {{#if image}}style="text-align: center;"{{/if}}>
        {{#if image}}
          <img {{#unless @root.resume.meta.disableImageStyling }}class="profile"{{/unless}} src="{{image}}" alt="{{name}}">
        {{/if}}
        {{#unless @root.resume.meta.hideName }}
          <div>
            <h1 class="name-box">{{name}}</h1>
          </div>
        {{/unless}}
        {{#unless @root.resume.meta.labelUnderLogo}}
          {{#if label}}
          <h2 class="label-text">{{label}}</h2>
          {{/if}}
        {{/unless}}
      </div>
      <div class="header-right contact-info">
        {{#if location}}
        <div class="contact-item">
          <span class="icon"><i class="fas fa-map-marker-alt"></i></span>
          <span class="text">
            {{formatLocation location}}
          </span>
        </div>
        {{/if}}
        {{#if phone}}
        <div class="contact-item">
          <span class="icon"><i class="fas fa-phone"></i></span>
          <span class="text"><a href="tel:{{phone}}">{{phone}}</a></span>
        </div>
        {{/if}}
        {{#if email}}
        <div class="contact-item">
          <span class="icon"><i class="fas fa-envelope"></i></span>
          <span class="text"><a href="mailto:{{email}}">{{email}}</a></span>
        </div>
        {{/if}}
        {{#if url}}
        <div class="contact-item">
          <span class="icon"><i class="fas fa-globe"></i></span>
          <span class="text">{{{link url}}}</span>
        </div>
        {{/if}}
        {{#each profiles}}
        <div class="contact-item">
          <span class="icon"><i class="fab fa-{{network}}"></i></span>
          <span class="text"><a href="{{url}}">{{#if username}}{{username}}{{else}}{{network}}{{/if}}</a></span>
        </div>
        {{/each}}
      </div>
    </header>

    <div class="content-row">
      {{#if summary}}
      <section id="about">
        <h3 class="section-title">{{i18n "about"}}</h3>
        <div class="summary-text">
          {{{markdown summary}}}
        </div>
      </section>
      {{/if}}
      {{/resume.basics}}

      {{#if resume.skills.length}}
      <section id="skills">
        <div class="skills-wrapper">
          {{#each resume.skills}}
          <div class="skill-container">
            <div class="skill-item">
              <div class="skill-name"><span>{{name}}</span></div>
              <div class="skill-bar-bg">
                 <div class="skill-bar-fill" data-level="{{level}}"></div> 
              </div>
            </div>
            {{#if keywords.length}}
            <div class="skill-keywords">
              {{#each keywords}}{{.}}{{#unless @last}}, {{/unless}}{{/each}}
            </div>
            {{/if}}
          </div>
          {{/each}}
        </div>
      </section>
      {{/if}}
    </div>

    {{#if resume.interests.length}}
    <section id="interests">
        <div class="interests-wrapper">
            {{#each resume.interests}}
            <div class="interest-item">
                <span class="interest-name">{{name}}</span>
                <span class="interest-circle" {{#if size}}style="--interest-size: {{size}}"{{/if}}></span>
                {{#if keywords.length}}
                <div class="interest-keywords">
                  {{#each keywords}}{{.}}{{#unless @last}}, {{/unless}}{{/each}}
                </div>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    {{#if resume.work.length}}
    <section id="experience">
      <h3 class="section-title">{{i18n "work-experience"}}</h3>
      {{#each resume.work}}
      <div class="job-item">
        <div class="job-date">
          {{#if startDate}}
          {{{date startDate}}} {{#if endDate}}– {{{date endDate}}}{{else}}– {{i18n "present"}}{{/if}}
          {{/if}}
        </div>
        <div class="job-content">
          <div class="job-header">
            {{#if position}}<span class="job-title">{{position}}</span>{{/if}}
            {{#if name}}<span class="job-company">{{#if url}}<a href="{{url}}" target="_blank">{{name}}</a>{{else}}{{name}}{{/if}}</span>{{/if}}
          </div>
          {{#if summary}}
          <div class="job-summary">
            {{{markdown summary}}}
          </div>
          {{/if}}
          {{#if highlights.length}}
          <ul class="job-highlights">
            {{#each highlights}}
            <li>{{.}}</li>
            {{/each}}
          </ul>
          {{/if}}
          
          {{#if tech_stack.length}}
          <div class="tech-stack">
            {{#each tech_stack}}
              <span class="tech-item">{{.}}</span>{{#unless @last}} / {{/unless}}
            {{/each}}
          </div>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </section>
    {{/if}}

    {{#if resume.education.length}}
    <section id="education">
      <h3 class="section-title">{{i18n "education"}}</h3>
      {{#each resume.education}}
      <div class="job-item">
        <div class="job-date">
          {{#if startDate}}
          {{{date startDate}}} {{#if endDate}}– {{{date endDate}}}{{else}}– {{i18n "present"}}{{/if}}
          {{/if}}
        </div>
        <div class="job-content">
          <div class="job-header">
            {{#if institution}}<span class="job-title">{{#if url}}<a href="{{url}}" target="_blank">{{institution}}</a>{{else}}{{institution}}{{/if}}</span>{{/if}}
            {{#if area}}<span class="job-company">{{area}}</span>{{/if}}
          </div>
          {{#if studyType}}
          <div class="job-summary">
            {{studyType}}
          </div>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </section>
    {{/if}}

    {{#if resume.volunteer.length}}
    <section id="volunteer">
      <h3 class="section-title">{{i18n "volunteer"}}</h3>
      {{#each resume.volunteer}}
      <div class="job-item">
        <div class="job-date">
          {{#if startDate}}
          {{{date startDate}}} {{#if endDate}}– {{{date endDate}}}{{else}}– {{i18n "present"}}{{/if}}
          {{/if}}
        </div>
        <div class="job-content">
          <div class="job-header">
            {{#if organization}}<span class="job-title">{{organization}}</span>{{/if}}
            {{#if position}}<span class="job-company">{{position}}</span>{{/if}}
          </div>
          {{#if summary}}
          <div class="job-summary">
            {{{markdown summary}}}
          </div>
          {{/if}}
          {{#if highlights.length}}
          <ul class="job-highlights">
            {{#each highlights}}
            <li>{{.}}</li>
            {{/each}}
          </ul>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </section>
    {{/if}}

    {{#if resume.projects.length}}
    <section id="projects">
      <h3 class="section-title">{{i18n "projects"}}</h3>
      {{#each resume.projects}}
      <div class="job-item">
        <div class="job-date">
          {{#if startDate}}
          {{{date startDate}}} {{#if endDate}}– {{{date endDate}}}{{else}}– {{i18n "present"}}{{/if}}
          {{/if}}
        </div>
        <div class="job-content">
          <div class="job-header">
            {{#if name}}<span class="job-title">{{name}}</span>{{/if}}
            {{#if entity}}<span class="job-company">{{entity}}</span>{{/if}}
          </div>
          {{#if description}}
          <div class="job-summary">
            {{{markdown description}}}
          </div>
          {{/if}}
          {{#if highlights.length}}
          <ul class="job-highlights">
            {{#each highlights}}
            <li>{{.}}</li>
            {{/each}}
          </ul>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </section>
    {{/if}}

    {{#if resume.awards.length}}
    <section id="awards">
      <h3 class="section-title">{{i18n "awards"}}</h3>
      {{#each resume.awards}}
      <div class="job-item">
        <div class="job-date">
          {{#if date}}
          {{{date date}}}
          {{/if}}
        </div>
        <div class="job-content">
          <div class="job-header">
            {{#if title}}<span class="job-title">{{title}}</span>{{/if}}
            {{#if awarder}}<span class="job-company">{{awarder}}</span>{{/if}}
          </div>
          {{#if summary}}
          <div class="job-summary">
            {{{markdown summary}}}
          </div>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </section>
    {{/if}}
    
    {{#if resume.certificates.length}}
    <section id="certificates">
      <h3 class="section-title">{{i18n "certificates"}}</h3>
      {{#each resume.certificates}}
      <div class="job-item">
        <div class="job-date">
          {{#if date}}
          {{{date date}}}
          {{/if}}
        </div>
        <div class="job-content">
          <div class="job-header">
            {{#if name}}<span class="job-title">{{#if url}}<a href="{{url}}" target="_blank">{{name}}</a>{{else}}{{name}}{{/if}}</span>{{/if}}
            {{#if issuer}}<span class="job-company">{{issuer}}</span>{{/if}}
          </div>
        </div>
      </div>
      {{/each}}
    </section>
    {{/if}}

    {{#if resume.publications.length}}
    <section id="publications">
      <h3 class="section-title">{{i18n "publications"}}</h3>
      {{#each resume.publications}}
      <div class="job-item">
        <div class="job-date">
          {{#if releaseDate}}
          {{{date releaseDate}}}
          {{/if}}
        </div>
        <div class="job-content">
          <div class="job-header">
            {{#if name}}<span class="job-title">{{#if url}}<a href="{{url}}" target="_blank">{{name}}</a>{{else}}{{name}}{{/if}}</span>{{/if}}
            {{#if publisher}}<span class="job-company">{{publisher}}</span>{{/if}}
          </div>
          {{#if summary}}
          <div class="job-summary">
            {{{markdown summary}}}
          </div>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </section>
    {{/if}}

    {{#if resume.languages.length}}
    <section id="languages">
        <h3 class="section-title">{{i18n "languages"}}</h3>
        <div class="languages-wrapper">
            {{#each resume.languages}}
            <div class="language-item">
                <span class="language-name">{{language}}</span>
                <span class="language-fluency">{{fluency}}</span>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    {{#if resume.references.length}}
    <section id="references">
      <h3 class="section-title">{{i18n "references"}}</h3>
      <div class="references-wrapper">
      {{#each resume.references}}
      <div class="reference-item">
        {{#if name}}
        <div class="reference-header">
            <div class="reference-name">{{name}}</div>
            {{#if position}}
            <div class="reference-title">
              {{position}}{{#if company}}, {{company}}{{/if}}
            </div>
            {{/if}}
        </div>
        {{/if}}
        
        {{#if reference}}
        <div class="reference-body">
            <blockquote>
              {{reference}}
            </blockquote>
        </div>
        {{/if}}

        {{#if hasFooter}}
        <div class="reference-footer">
            {{#if email}}
            <div class="reference-contact-item">
              <span class="icon"><i class="fas fa-envelope"></i></span>
              <span class="text"><a href="mailto:{{email}}">{{email}}</a></span>
            </div>
            {{/if}}
            {{#if phone}}
            <div class="reference-contact-item">
              <span class="icon"><i class="fas fa-phone"></i></span>
              <span class="text"><a href="tel:{{phone}}">{{phone}}</a></span>
            </div>
            {{/if}}
            {{#if url}}
            <div class="reference-contact-item">
              <span class="icon"><i class="fas fa-globe"></i></span>
              <span class="text"><a href="{{url}}" target="_blank">{{url}}</a></span>
            </div>
            {{/if}}
        </div>
        {{/if}}
      </div>
      {{/each}}
      </div>
    </section>
    {{/if}}

  </div>
  <script>
    (function() {
        var skills = document.querySelectorAll('.skill-bar-fill');
        skills.forEach(function(skill) {
            var level = (skill.getAttribute('data-level') || '').toLowerCase();
            var width = '60%'; // Default
            if (level === 'advanced' || level === 'master' || level === 'expert') width = '100%';
            else if (level === 'intermediate' || level === 'senior') width = '70%';
            else if (level === 'beginner' || level === 'junior') width = '40%';
            else if (level.includes('%')) width = level;
            
            skill.style.width = width;
            skill.style.opacity = width;
        });
    })();
  </script>
</body>
</html>
